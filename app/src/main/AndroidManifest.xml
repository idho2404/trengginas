<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools">
    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE"/>
    <uses-permission android:name="android.permission.READ_MEDIA_IMAGES" />
    <uses-permission android:name="android.permission.READ_MEDIA_VIDEO" />
    <uses-permission android:name="android.permission.READ_MEDIA_AUDIO" />

    <application
        android:allowBackup="true"
        android:dataExtractionRules="@xml/data_extraction_rules"
        android:fullBackupContent="@xml/backup_rules"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:supportsRtl="true"
        android:theme="@style/Theme.Design.Light.NoActionBar">

        <activity android:name=".activity.BaseActivity"
            android:exported="true">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <!-- HomeActivity declaration -->
        <activity android:name=".activity.HomeActivity" android:exported="true"/>
        <activity android:name=".activity.DatatableActivity" android:exported="true"/>
        <activity android:name=".activity.InfografisActivity" android:exported="true"/>
        <activity android:name=".activity.KontakActivity" android:exported="true"/>
        <activity android:name=".activity.MaswilActivity" android:exported="true"/>
        <activity android:name=".activity.PublikasiActivity" android:exported="true"/>
        <activity android:name=".activity.TentangActivity" android:exported="true"/>
        <activity android:name=".activity.NetworkCheckActivity" android:exported="true"/>

        <!-- Datatabel -->
        <activity android:name=".activity.data.DataGeografisActivity" />
        <activity android:name=".activity.data.DataPemerintahanActivity" />
        <activity android:name=".activity.data.DataPertanianActivity" />
        <activity android:name=".activity.data.DataKependudukanActivity" />
        <activity android:name=".activity.data.DataKetenagakerjaanActivity" />
        <activity android:name=".activity.data.DataKemiskinanActivity" />
        <activity android:name=".activity.data.DataIpmActivity" />
        <activity android:name=".activity.data.DataEkonomiActivity" />
        <activity android:name=".activity.data.DataPariwisataActivity" />
    </application>

</manifest>